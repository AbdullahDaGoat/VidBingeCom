{
  "rewrites": [
    {
      "source": "/opensearch.xml",
      "destination": "/opensearch.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/opensearch.xml",
      "headers": [
        { 
          "key": "Cache-Control", 
          "value": "no-cache, no-store, must-revalidate" 
        },
        { 
          "key": "Pragma", 
          "value": "no-cache" 
        },
        { 
          "key": "Expires", 
          "value": "0" 
        }
      ]
    },
    {
      "source": "/manifest.webmanifest",
      "headers": [
        { 
          "key": "Cache-Control", 
          "value": "no-cache, no-store, must-revalidate" 
        },
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, s-maxage=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/media/tmdb-tv-:tvId-:tvName/:season/:episode?/?",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebookexternalhit|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Applebot)"
        }
      ],
      "destination": "https://www.vidbinge.app/media/tmdb-tv-:tvId-:tvName",
      "permanent": false
    },
    {
      "source": "/media/tmdb-tv-:tvId-:tvName/?",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebookexternalhit|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Applebot)"
        }
      ],
      "destination": "https://www.vidbinge.app/media/tmdb-tv-:tvId-:tvName",
      "permanent": false
    },
    {
      "source": "/media/tmdb-movie-:movieId-:movieName/?",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebookexternalhit|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Applebot)"
        }
      ],
      "destination": "https://www.vidbinge.app/media/tmdb-movie-:movieId-:movieName",
      "permanent": false
    }
  ]
}
